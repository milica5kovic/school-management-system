@model Student

@{
    ViewData["Title"] = "Obriši studenta";
}

<h2>Obriši studenta</h2>

<h3>Da li ste sigurni da želite da obrišete ovog studenta?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Otkaži</a>
    </form>
</div>