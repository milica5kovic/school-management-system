@model Student
@{
    ViewData["Title"] = "Dodaj studenta";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <!-- HEADER -->
                <div class="card-header bg-primary text-white">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-user-graduate me-2"></i>
                        <h4 class="mb-0">Dodaj novog studenta</h4>
                    </div>
                </div>

                <!-- BODY -->
                <div class="card-body">
                    <form asp-action="Create">
                        @Html.AntiForgeryToken()

                        <!-- VALIDATION SUMMARY -->
                        <div asp-validation-summary="ModelOnly"
                             class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                        </div>

                        <!-- JMBG -->
                        <div class="mb-3">
                            <label asp-for="Jmbg" class="form-label">
                                <i class="fas fa-id-card me-2"></i>JMBG/ID broj
                            </label>
                            <input asp-for="Jmbg" class="form-control" />
                            <span asp-validation-for="Jmbg" class="text-danger"></span>
                        </div>

                        <!-- FIRST NAME -->
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">
                                <i class="fas fa-user me-2"></i>Ime
                            </label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <!-- LAST NAME -->
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">
                                <i class="fas fa-user me-2"></i>Prezime
                            </label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <!-- PHONE -->
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">
                                <i class="fas fa-phone me-2"></i>Telefon
                            </label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <!-- EMAIL -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>E‑pošta
                            </label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- EMERGENCY CONTACT NAME -->
                        <div class="mb-3">
                            <label asp-for="EmergencyContactName" class="form-label">
                                <i class="fas fa-user-shield me-2"></i>Hitni kontakt
                            </label>
                            <input asp-for="EmergencyContactName" class="form-control" />
                            <span asp-validation-for="EmergencyContactName"
                                  class="text-danger"></span>
                        </div>

                        <!-- EMERGENCY CONTACT PHONE -->
                        <div class="mb-4">
                            <label asp-for="EmergencyContactPhone" class="form-label">
                                <i class="fas fa-phone-square-alt me-2"></i>Telefon hitnog kontakta
                            </label>
                            <input asp-for="EmergencyContactPhone" class="form-control" />
                            <span asp-validation-for="EmergencyContactPhone"
                                  class="text-danger"></span>
                        </div>

                        <!-- BUTTONS -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left me-2"></i>Nazad
                            </a>
                            <input type="submit" value="Sačuvaj" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        $(function () {
            // Highlight label on focus/blur (isti efekat kao u upisu)
            $('.form-control').on('focus', function () {
                $(this).closest('.mb-3, .mb-4')
                       .find('.form-label')
                       .addClass('text-primary');
            }).on('blur', function () {
                $(this).closest('.mb-3, .mb-4')
                       .find('.form-label')
                       .removeClass('text-primary');
            });
        });
    </script>

    <style>
        .form-label {
            font-weight: 500;
            color: #495057;
            transition: color .2s ease;
        }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 .2rem rgba(13,110,253,.25);
        }

        .btn { border-radius: .375rem; font-weight: 500; }
        .card { border-radius: .5rem; }
        .card-header { border-top-left-radius: .5rem; border-top-right-radius: .5rem; }
    </style>
}
