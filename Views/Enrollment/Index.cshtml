@model IEnumerable<Enrollment>

@{
    ViewData["Title"] = "Upisi";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="mb-0">
                                <i class="fas fa-user-plus me-2"></i>Lista upisa studenata
                            </h4>
                        </div>
                        <div class="col-auto">
                            <a asp-action="Create" class="btn btn-primary btn-custom">
                                <i class="fas fa-plus me-2"></i>Dodaj novi upis
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="enrollmentsTable">
                                <thead>
                                    <tr>
                                        <th>
                                            <i class="fas fa-user me-2"></i>Student
                                        </th>
                                        <th>
                                            <i class="fas fa-book me-2"></i>Kurs
                                        </th>
                                        <th>
                                            <i class="fas fa-calendar me-2"></i>Datum upisa
                                        </th>
                                        <th>
                                            <i class="fas fa-cogs me-2"></i>Akcije
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var enrollment in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                                                        <i class="fas fa-user text-white"></i>
                                                    </div>
                                                    <strong>@enrollment.Student?.FullName</strong>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-info rounded-circle d-flex align-items-center justify-content-center me-3">
                                                        <i class="fas fa-book text-white"></i>
                                                    </div>
                                                    <span>@enrollment.Course?.Title</span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-calendar-alt text-muted me-2"></i>
                                                    <span class="badge bg-light text-dark">@enrollment.EnrolledOn.ToShortDateString()</span>
                                                </div>
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@enrollment.Id" class="btn btn-warning btn-action" title="Izmeni">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@enrollment.Id" class="btn btn-info btn-action" title="Detalji">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@enrollment.Id" class="btn btn-danger btn-action" title="ObriÅ¡i">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-plus fa-4x text-muted mb-4"></i>
                            <h4 class="text-muted">Nema upisa</h4>
                            <p class="text-muted">Trenutno nema upisa studenata u bazi podataka.</p>
                            <a asp-action="Create" class="btn btn-primary btn-custom">
                                <i class="fas fa-plus me-2"></i>Dodaj prvi upis
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#enrollmentsTable').DataTable({
                "pageLength": 10,
                "lengthMenu": [[5, 10, 25, 50], [5, 10, 25, 50]],
                "order": [[ 2, "desc" ]],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/English.json"
                },
                "columnDefs": [
                    { "orderable": false, "targets": 3 }
                ]
            });
        });
    </script>
    
    <style>
        .avatar-sm {
            width: 35px;
            height: 35px;
            font-size: 14px;
        }
    </style>
}