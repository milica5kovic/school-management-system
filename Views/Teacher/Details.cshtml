@model Teacher

@{
    ViewData["Title"] = "Detalji nastavnika";
}

<h2>Detalji nastavnika</h2>

<div>
    <h4>Nastavnik</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Ime:</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Izmeni</a>
    <a asp-action="Index" class="btn btn-secondary">Nazad</a>
</div>
