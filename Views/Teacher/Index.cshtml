@model IEnumerable<Teacher>
@{
    ViewData["Title"] = "Nastavnici";
}
<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header">
            <h4 class="mb-0"><i class="fas fa-chalkboard-teacher me-2"></i>Lista nastavnika</h4>
        </div>
        <div class="card-body">
            <a asp-action="Create" class="btn btn-primary mb-3">
                <i class="fas fa-plus me-2"></i>Dodaj nastavnika
            </a>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Ime i prezime</th>
                            <th>E‑pošta</th>
                            <th>Telefon</th>
                            <th>Radno vreme</th>
                            <th>Zaposlen od</th>
                            <th>Akcije</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model)
                        {
                            <tr>
                                <td>@t.FullName</td>
                                <td>@t.Email</td>
                                <td>@t.Phone</td>
                                <td>@t.EmploymentType</td>
                                <td>@t.HiredOn?.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@t.Id"
                                       class="btn btn-warning btn-sm me-1"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Details" asp-route-id="@t.Id"
                                       class="btn btn-info btn-sm me-1"><i class="fas fa-eye"></i></a>
                                    <a asp-action="Delete" asp-route-id="@t.Id"
                                       class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
