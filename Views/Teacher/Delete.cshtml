@model Teacher

@{
    ViewData["Title"] = "Obriši nastavnika";
}

<h2>Da li ste sigurni da želite da obrišete ovog nastavnika?</h2>

<div>
    <h4>Nastavnik</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Ime:</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
    </dl>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Otkaži</a>
    </form>
</div>
