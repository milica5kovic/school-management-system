@model IEnumerable<Course>

@{
    ViewData["Title"] = "Kursevi";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="mb-0">
                                <i class="fas fa-book me-2"></i>Lista kurseva
                            </h4>
                        </div>
                        <div class="col-auto">
                            <a href="@Url.Action("Create")" class="btn btn-primary btn-custom">
                                <i class="fas fa-plus me-2"></i>Dodaj novi kurs
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="coursesTable">
                                <thead>
                                    <tr>
                                        <th>
                                            <i class="fas fa-book-open me-2"></i>Naslov kursa
                                        </th>
                                        <th>
                                            <i class="fas fa-cogs me-2"></i>Akcije
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var course in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@course?.Title</strong>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Edit", new { id = course.Id })" class="btn btn-warning btn-action" title="Izmeni">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("Details", new { id = course.Id })" class="btn btn-info btn-action" title="Detalji">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", new { id = course.Id })" class="btn btn-danger btn-action" title="ObriÅ¡i">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-book fa-4x text-muted mb-4"></i>
                            <h4 class="text-muted">Nema kurseva</h4>
                            <p class="text-muted">Trenutno nema kurseva u bazi podataka.</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary btn-custom">
                                <i class="fas fa-plus me-2"></i>Dodaj prvi kurs
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#coursesTable').DataTable({
                "pageLength": 10,
                "lengthMenu": [[5, 10, 25, 50], [5, 10, 25, 50]],
                "order": [[0, "asc"]],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/English.json"
                },
                "columnDefs": [
                    { "orderable": false, "targets": 1 }
                ]
            });
        });
    </script>

    <style>
        .btn-action {
            margin-right: 5px;
        }
    </style>
}
